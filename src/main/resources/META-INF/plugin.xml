<idea-plugin>
    <id>co.anbora.labs.ngrok</id>
    <name>Ngrok</name>
    <vendor email="anboralabs@gmail.com" url="https://labs.anbora.co">Anbora-labs</vendor>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="co.anbora.labs.ngrok.settings.NgrokSettings"/>
        <applicationService serviceImplementation="co.anbora.labs.ngrok.service.NgrokService"/>

        <applicationService serviceImplementation="co.anbora.labs.ngrok.service.NgrokApplicationManager"/>

        <remoteServer.type implementation="co.anbora.labs.ngrok.remote.server.NgrokHostType"/>
        <serviceViewContributor implementation="co.anbora.labs.ngrok.remote.server.NgrokServiceViewContributor"/>
        <remoteServer.deploymentSource.type implementation="co.anbora.labs.ngrok.remote.server.deployment.NgrokSingletonDeploymentSourceType"/>
    </extensions>

    <actions>
        <group id="Ngrok.RemoteServers.Main">
            <reference ref="RemoteServers.ConnectServer"/>
            <reference ref="RemoteServers.DisconnectServer"/>
            <reference ref="RemoteServers.EditServerConfig"/>
            <!--<action id="Tye.RemoteServers.OpenTyeWebDashboard"
                    class="com.github.rafaelldi.tyeplugin.actions.OpenTyeWebDashboardAction"
                    text="Web Dashboard"
                    description="Open web dashboard"
                    icon="AllIcons.General.Web"/>
            <action id="Tye.RemoteServers.TyeApplicationShutdown"
                    class="com.github.rafaelldi.tyeplugin.actions.TyeApplicationShutdownAction"
                    text="Shutdown"
                    description="Tye application shutdown"
                    icon="AllIcons.Nodes.Undeploy"/>
            <separator/>
            <action id="Tye.RemoteServers.TyeBuild"
                    class="com.github.rafaelldi.tyeplugin.actions.TyeBuildAction"
                    text="Tye Build"
                    description="Run tye build command"
                    icon="AllIcons.Actions.Compile"/>
            <action id="Tye.RemoteServers.TyePush"
                    class="com.github.rafaelldi.tyeplugin.actions.TyePushAction"
                    text="Tye Push"
                    description="Run tye push command"
                    icon="AllIcons.Vcs.Push"/>-->
        </group>
        <group id="Ngrok.RemoteServers.Secondary"/>
        <group id="Ngrok.RemoteServers.Toolbar"/>

        <action id="Ngrok.Services.AddTyeHost" class="co.anbora.labs.ngrok.actions.AddNgrokHostAction">
            <add-to-group group-id="ServiceView.AddService"/>
        </action>
    </actions>
</idea-plugin>